<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<%= render "search/search", q: @q %>
<!--コントローラから渡された@post_images変数内から1つずつ取り出して、post_image変数へ格納-->
<% @posts.each do |post| %>

  <div>
    <!--image_tagを使いpostにActiveStorageで設定したimageを表示-->
    <!--post_image.get_imageの部分はPostモデル内に記述したメソッドを呼び出し-->
    <!--<#%= image_tag post.get_image, size:"300x300" %>-->
    <p><%= image_tag post.user.get_profile_image(100,100) %></p>

    <p><%= image_tag post.image, size:"300x300" %></p>

    <p>ブランド名: <%=post.brand %></p>

    <%= link_to post_path(post.id) do %>
      <P>・ <%= post.title %></P>
    <% end %>

    <p><%= post.body %></p>

    <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>

    <% if post.favorited_by?(current_user) %>
      <p>
        <%= link_to post_favorites_path(post), method: :delete do %>
          ♥<%= post.favorites.count %> いいね
        <% end %>
      </p>
    <% else %>
      <p>
        <%= link_to post_favorites_path(post), method: :post do %>
          ♡<%= post.favorites.count %> いいね
        <% end %>
      </p>
    <% end %>

  </div>

<% end %>