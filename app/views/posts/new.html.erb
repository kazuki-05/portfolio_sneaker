<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
<hr>
<h1>投稿</h1>

<div class="form-body p-4">

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post do |f| %>
<h4>スニーカー画像</h4>
<%= f.file_field :image, accept: "image/*",class: "w-100" %>

     
      <h4>ブランド名</h4>
      <%= f.select :brand_id, Brand.all.map {|brand|[brand.name, brand.id]}, {}, {} %>
      
      <h4>タイトル</h4>
      <%= f.text_field :title,class:"form-control" %>
      
      <h4>本文</h4>
      <%= f.text_area :body,class:"form-control" %>
      <hr>
      <P><%= f.submit 'シェア',class:"btn btn-lg btn-block btn-info mt-4" %></P>
      
      <% end %>
  
      </div>
    </div>
  </div>
</div>


