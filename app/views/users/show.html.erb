<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">


<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p><%= link_to "プロフィール編集", edit_user_path %></p>

  
</div>


<% @post.each do |post| %>

<div>
  <!--image_tagを使いpostにActiveStorageで設定したimageを表示-->
  <!--post_image.get_imageの部分はPostモデル内に記述したメソッドを呼び出し-->
  <!--<#%= image_tag post.get_image, size:"300x300" %>-->
  <p><%= image_tag post.image, size:"300x300" %></p>

  <p>ブランド名: <%= post.brand %></p>

  <P>・ <%= post.title %></P>

  <p><%= post.body %></p>

  <p>ユーザーネーム：<%= post.user.name %></p>

  <p>投稿日：<%= post.created_at.strftime('%Y/%m/%d') %></p>

  <!--投稿者＝現在ログインしているユーザーだったら削除できる-->
  <% if post.user == current_user %>
  <%= link_to "削除", post_path(post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  <% end %>
  
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
  
  <p><%= link_to "編集", edit_post_path(post.id) %></p>

</div>

<% end %>